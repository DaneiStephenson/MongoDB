<h1>Read Past Articles Here</h1>
<a class="articleURL" href="{{ this.articleURL }}">
    <div id="picture">
        <img src="{{ this.imgURL }}">
    </div>
</a>
{{#each articles}}
<div id="content">

    <h2>{{ this.title }}</h2>
    <p>{{ this.link }}</p>
    <p>{{ this.image }}</p>
</div>
{{/each}}
<div id="comments">
    <div class="comments">
        <h3>Leave Your Thoughts:</h3>
        <input id="comment" type="text" name="comment" placeholder="What are your thoughts?">
        <button id="post" data-id="{{ this._id }}">Done</button>
    </div>
</div>
